<Window x:Class="A5._2_Actualizar_Plantillas_de_Control_de_A5._1.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:A5._2_Actualizar_Plantillas_de_Control_de_A5._1"
        xmlns:vm="clr-namespace:A5._2_Actualizar_Plantillas_de_Control_de_A5._1.ViewModels"
        mc:Ignorable="d"
        Title="A5.2_AitYoucefDjaafer" 
        MinHeight="600" MinWidth="650"
        Height="700" Width="1000"
        WindowStartupLocation="CenterScreen"
        >

    <Window.DataContext>
        <vm:MainWindowVM />
    </Window.DataContext>

    <Window.Resources>
        <!-- Hemos llevado el código de estilos y plantillas a un archivo externo "Estilos.xaml" -->
    </Window.Resources>

    <!-- CUERPO de la VISTA -->
    <Border Margin="10"
            Padding="10,10,10,5"
            BorderThickness="1"
            BorderBrush="Black"
            Background="White">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition Width="300"></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <ListBox x:Name="platosListBox"
                     Grid.Column="0"
                     ItemsSource="{Binding Path=ListaPlatos}"
                     SelectedItem="{Binding Path=PlatoSeleccionado}"
                     Style="{StaticResource estiloListaPlatos}">
            </ListBox>

            <!-- FORMULARIO -->
            <Border Grid.Column="1"
                    Background="Gainsboro"
                    Margin="15,0,5,0"
                    Padding="10"
                    >

                <StackPanel Style="{StaticResource formulario}">

                    <TextBlock>Nombre del plato</TextBlock>
                    <TextBox Template="{DynamicResource TextBoxTemplate}" Text="{Binding Path=PlatoSeleccionado.Nombre, UpdateSourceTrigger=PropertyChanged}"></TextBox>

                    <TextBlock>Foto del plato</TextBlock>
                    <TextBox Template="{DynamicResource TextBoxTemplate}" Text="{Binding Path=PlatoSeleccionado.Imagen, UpdateSourceTrigger=PropertyChanged}"></TextBox>

                    <TextBlock>Tipo de comida</TextBlock>
                    <ComboBox ItemsSource="{Binding Path=ListaTipos}"
                              SelectedItem="{Binding Path=PlatoSeleccionado.Tipo, UpdateSourceTrigger=PropertyChanged}"
                              Margin="0,0,0,10">
                    </ComboBox>

                    <GroupBox Style="{DynamicResource GroupBoxStyle1}" Header="Alérgenos"
                              BorderBrush="Black"
                              BorderThickness="1"
                              Padding="5,5,5,0">
                        <UniformGrid>
                            <CheckBox Content="Leche"
                                      IsChecked="{Binding Path=PlatoSeleccionado.Leche}"
                                      Margin="0,0,0,10"
                                      />
                            <CheckBox Content="Soja"
                                      IsChecked="{Binding Path=PlatoSeleccionado.Soja}"
                                      Margin="0,0,0,10"
                                      />
                            <CheckBox Content="Gluten"
                                      IsChecked="{Binding Path=PlatoSeleccionado.Gluten}"
                                      Margin="0,0,0,10"
                                      />
                            <CheckBox Content="Sulfitos"
                                      IsChecked="{Binding Path=PlatoSeleccionado.Sulfitos}"
                                      Margin="0,0,0,10"
                                      />
                        </UniformGrid>
                    </GroupBox>

                    <Button Content="Limpiar selección"
                            Command="{Binding LimpiarSelecciónCommand}"
                            Margin="0,10,0,0"
                            Background="LightSkyBlue"
                            Width="120" 
                            HorizontalAlignment="Left"
                            />

                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>
